    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.5",
    "graphql-server-express": "^1.1.0",
    "graphql-tools": "^1.1.0",
    "isomorphic-unfetch": "^2.0.0",
    "jsonwebtoken": "^7.4.2",
    "multer": "^1.3.0",
    "mysql": "^2.14.1",
    "mysql2": "^1.4.2",
    "node-fetch": "^1.7.2",
    "pg": "^7.0.2",
