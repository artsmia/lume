    "start": "NODE_ENV=production node build",
    "clean": "rm -rf build",
    "test": "jest",
    "deploy": "now && now alias"
  },
  "dependencies": {
    "apollo-server-express": "^1.1.0",
    "aws-sdk": "^2.94.0",
    "bcrypt": "^1.0.2",
